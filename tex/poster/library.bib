file = {:C$\backslash$:/SnowzTail/Simulations/signal-optimization-for-wireless-information-and-power-transmission/docs/Wireless Information and Power Transfer Nonlinearity Waveform Design and Rate Energy Tradeoff.pdf:pdf},
